{
    "name": "mfext-monorepo",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@10.15.1",
    "scripts": {
        "start": "pnpm -r start",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r lint:fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "typecheck": "pnpm -r typecheck",
        "validate": "pnpm lint && pnpm format:check && pnpm typecheck",
        "prepare": "husky",
        "playground:clean": "pnpm --filter \"@kyori-mfv/mfext-playground\" exec rm -rf dist",
        "playground:build:discover": "pnpm --filter \"@kyori-mfv/mfext-playground\" exec mfext build discover",
        "playground:build:client": "pnpm --filter \"@kyori-mfv/mfext-playground\" exec mfext build client",
        "playground:build:ssr": "pnpm --filter \"@kyori-mfv/mfext-playground\" exec mfext build ssr",
        "playground:build:rsc": "pnpm --filter \"@kyori-mfv/mfext-playground\" exec mfext build rsc",
        "playground:start": "pnpm --filter \"@kyori-mfv/mfext-playground\" start",
        "playground:build": "pnpm --filter \"@kyori-mfv/mfext-playground\" build",
        "playground:dev": "pnpm --filter \"@kyori-mfv/mfext-playground\" dev",
        "build:packages": "pnpm --filter \"@kyori-mfv/mfext-navigation\" build",
        "changeset": "changeset",
        "bump": "changeset version",
        "release": "pnpm build:packages && pnpm playground:build && changeset publish",
        "release:snapshot": "pnpm build:packages && changeset version --snapshot && changeset publish --tag snapshot"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.6",
        "@eslint/js": "^9.0.0",
        "@kyori-mfv/mfext-config": "workspace:*",
        "eslint": "^9.0.0",
        "husky": "^9.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.41.0"
    }
}
