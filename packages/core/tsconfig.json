{
    "extends": "@mfext/config/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "~core/*": ["./src/*"],
            "~core/tools/*": ["./src/tools/*"],
            "~core/types/*": ["./src/types/*"]
        }
    },
    "include": ["src/**/*", "global.d.ts"],
    "exclude": ["node_modules", "dist", "public"]
}
